{
  "name": "@kayoshi-dev/usetoast",
  "private": false,
  "version": "0.0.4-beta.2",
  "description": "A simple Toast library",
  "files": [
    "dist"
  ],
  "main": "./dist/use-toast.umd.js",
  "module": "./dist/use-toast.es.js",
  "exports": {
    ".": {
      "import": "./dist/use-toast.es.js",
      "require": "./dist/use-toast.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.5.4",
    "vite": "^2.9.9"
  },
  "dependencies": {
    "goober": "^2.1.9"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kayoshi-dev/useToast.git"
  },
  "keywords": [
    "toast",
    "notification"
  ],
